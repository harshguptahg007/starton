<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context=".vision_main">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/upbck" />


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_n"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:src="@drawable/imgg"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />



    <!--<ImageView-->
    <!--android:layout_width="250dp"-->
    <!--android:layout_height="250dp"-->
    <!--android:background="@drawable/imgg"-->
    <!--android:layout_marginTop="50dp"-->
    <!--android:id="@+id/img"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--/>-->

    <Button
        android:id="@+id/but_1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_n"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/butt_back"
        android:text="** Search **"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_below="@+id/but_1"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/arr" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="100dp"
        app:srcCompat="@drawable/cart" />


